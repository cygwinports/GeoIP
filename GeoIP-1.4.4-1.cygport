DESCRIPTION="GeoIP C library"
HOMEPAGE="http://www.maxmind.com/app/c"
SRC_URI="http://www.maxmind.com/download/geoip/api/c/${P}.tar.gz"

abi=1
PKG_NAMES="${PN} lib${PN}${abi} lib${PN}-devel"
PKG_HINTS="setup lib devel"
PKG_CONTENTS[0]='usr/bin/*.exe usr/share/doc/ usr/share/man/'
PKG_CONTENTS[1]="etc/ usr/bin/*.dll usr/share/${PN}/"
PKG_CONTENTS[2]='usr/include/ usr/lib/'

src_install() {
	cd ${B}
	cyginstall

	make_etc_defaults /etc/${PN}.conf
}
